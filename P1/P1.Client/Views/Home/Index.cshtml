@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Order Pizza</h1>
    <form method="post">
      <label for="email">E-Mail Address</label>
      <input type="text" name="email" value=""/>
      <br/>
      <label for="loc">Locations</label>
      <select name="loc">
        <option value="8082 SW Primrose Ave, Randolph, MA">8082 SW Primrose Ave, Randolph, MA</option>
        <option value="279 Bear Hill Ave, Long Branch, NJ">279 Bear Hill Ave, Long Branch, NJ</option>
        <option value="10 Wayne St, Jacksonville, NC">10 Wayne St, Jacksonville, NC</option>
        <option value="320 Marsh Drive, Frankfort, KY">320 Marsh Drive, Frankfort, KY</option>
      </select>
      <br/>
      <input type="radio" name="pizza" value="PresetPizza" checked="true"> Preset Pizza<br>
      <input type="radio" name="pizza" value="CustomPizza"> Custom Pizza<br>
        <label for="size">Sizes</label>
        <select name="size">
          <option value="Personal">Personal</option>
          <option value="Small">Small</option>
          <option value="Medium">Medium</option>
          <option value="Large">Large</option>
          <option value="Extra Large">Extra Large</option>
        </select>
        <br/>
        <label for="crust">Crust</label>
        <select name="crust">
          <option value="Pan">Pan</option>
          <option value="Hand-Tossed">Hand-Tossed</option>
          <option value="Thin">Thin</option>
          <option value="Gluten Free">Gluten Free</option>
          <option value="Brooklyn">Brooklyn</option>
        </select>
        <br/>
        <input type="checkbox" name="topping1" value="Sauce" checked="true"> Sauce<br>
        <input type="checkbox" name="topping2" value="Cheese" checked="true"> Cheese<br>
        <input type="checkbox" name="topping3" value="Pepperoni"> Pepperoni<br>
        <input type="checkbox" name="topping4" value="Sausage"> Sausage<br>
        <input type="checkbox" name="topping5" value="Bacon"> Bacon<br>
        <br/> 
        <!-- <label for="size">Sizes</label>
        <select name="size">
          <option value="Personal">Personal</option>
          <option value="Small">Small</option>
          <option value="Medium">Medium</option>
          <option value="Large">Large</option>
          <option value="Extra Large">Extra Large</option>
        </select> -->
        <label for="recipe">Recipe</label>
        <select name="recipe">
          <option value="None">None</option>
          <option value="Cheese">Cheese</option>
          <option value="Brooklyn">Brooklyn</option>
          <option value="MeatLovers">Meat Lovers</option>
        </select>
        <br/>
      <a asp-area="" asp-controller="ThankYou" asp-action="Index" class="btn btn-default">Submit</a>
    </form>
</div>
