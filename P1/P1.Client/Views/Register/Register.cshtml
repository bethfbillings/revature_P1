@{
    ViewData["Title"] = "Register";
}

@model P1.Client.Models.Register

<div class="text-center">
    <h1 class="display-4">Please Register</h1>
    <form method="post" asp-action="RegisterNewUser" asp-controller="Register">
      <label for="email">E-Mail Address</label>
      <input asp-for="email" type="text" name="email" value=""/>
      <br/>
      <label for="password">Password</label>
      <input asp-for="password" type="text" name="password" value=""/>
      <br/>
      <label for="fname">First Name</label>
      <input asp-for="fname" type="text" name="fname" value=""/>
      <br/>
      <label for="lname">Last Name</label>
      <input asp-for="lname" type="text" name="lname" value=""/>
      <br/>
      <input type="submit" value="Submit" onclick="Index"/>
    </form>
</div>